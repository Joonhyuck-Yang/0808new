# Railway 배포용 환경변수
PORT=8080
AUTH_SERVICE_URL=https://auth-service-production-aabc.up.railway.app

# Railway 환경 감지
RAILWAY_ENVIRONMENT=true

# Railway URL (배포 후 실제 URL로 변경 필요)
RAILWAY_URL=https://gateway-production-be21.up.railway.app

# 로깅 레벨
LOG_LEVEL=INFO

# CORS 설정
ALLOWED_ORIGINS=https://jhyang.info,https://www.jhyang.info,http://localhost:3000

# Railway 로그 설정
RAILWAY_LOG_JSON=true
RAILWAY_LOG_LEVEL=INFO

# HTTP 클라이언트 설정
HTTP_TIMEOUT=30
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE=20

# 추가 설정
RAILWAY_STATIC_URL=https://gateway-production-be21.up.railway.app
